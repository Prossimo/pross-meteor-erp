@import "var.styl";

*
  margin 0
  padding 0

ul
  list-style none

a
  text-decoration none

button
  border none
  background transparent
  &:active,
  &:focus
    outline none

.app
  min-height 100vh
  width 100%
  overflow hidden
  padding-top $header-height

  .page-content
    height 100%
    max-width 1200px
    margin 0 auto
    padding 0 10px
