@import "var.styl";

.single-project

  .activity
    padding 0 20px

    .text-area-wrap
      position relative

      input[type="file"]
        display none

    .user-info
      position absolute
      left 10px
      top 10px
      overflow hidden
      width 30px
      height 30px

      > img
        display block
        width 100%
        height auto

    textarea
      display block
      width 100%
      padding 20px 50px 30px 50px
      border 1px solid $grey
      border-radius 3px
      font-family inherit

      &:focus
        outline none
        box-shadow inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px rgba(102,175,233,0.6);

    .add-doc-controls
      position absolute
      top 10px
      right 10px
      display block
      width 20px
      height 20px
      text-align center
      line-height 20px
      font-size 18px

      &:hover
        cursor pointer

        &:before
          color $main-color

      &:before
        content '\f0c6'
        font-family FontAwesome
        color $text-color
        transition .3s

    .attached-list
      display flex
      flex-direction column
      align-items flex-start

    .attached-files
      border-radius 3px
      border $grey
      font-size 12px
      color $main-color

      &:hover
        cursor pointer
        text-decoration line-through

      &:before
        content '\f0c6'
        font-family Fontawesome
        padding-right 10px
        color $main-color

  .msg-controls
    padding 20px 0 15px

  .send-msg
    background $main-color
    color $white

    &:hover
      background alpha($main-color, .7)

  .right-sidebar

    .project-members
      padding 10px 0 0

    .user-list
      padding 10px 0
      .username
        font-size 16px
        text-transform capitalize

      .email
        font-size 12px
        &:before
          content '('
        &:after
          content ')'








