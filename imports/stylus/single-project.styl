.single-project
  align-items flex-start

  .activity
    padding 0 20px
    position relative

    &:after
      content '\f198'
      font-family FontAwesome
      position absolute
      top 0
      right 10%
      color alpha($main-color, .1)
      font-size 330px

    .text-area-wrap
      position relative

      input[type="file"]
        display none

    .user-info
      position absolute
      left 10px
      top 10px
      overflow hidden
      width 30px
      height 30px

      > img
        display block
        width 100%
        height auto

    textarea
      display block
      width 100%
      padding 20px 50px 30px 50px
      border 1px solid $grey
      border-radius 3px
      font-family inherit

      &:focus
        outline none
        box-shadow inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px rgba(102,175,233,0.6);

    .add-doc-controls
      position absolute
      top 10px
      right 10px
      display block
      width 20px
      height 20px
      text-align center
      line-height 20px
      font-size 18px

      &:hover
        cursor pointer

        &:before
          color $main-color

      &:before
        content '\f0c6'
        font-family FontAwesome
        color $text-color
        transition .3s

    .attached-list
      display flex
      flex-direction column
      align-items flex-start

    .attached-files
      border-radius 3px
      border $grey
      font-size 12px
      color $main-color

      &:hover
        cursor pointer
        text-decoration line-through

      &:before
        content '\f0c6'
        font-family Fontawesome
        padding-right 10px
        color $main-color

  .msg-controls
    padding 20px 0 15px

  .send-msg
    background $main-color
    color $white

    &:hover
      background alpha($main-color, .7)

  .right-sidebar
    overflow hidden

    .title
      position relative
      z-index 5
      background $white

    .add-member-form
      padding 10px 0
      border-bottom 5px solid $main-color

      &.active
        transform translateY(100%)

      .select-wrap
        padding 0 0 15px


    .project-members
      padding 10px 0 0

    .member-list
      padding 10px 0
      transition .3s

      .memberName
        font-size 16px
        text-transform capitalize
        display block

        &:hover
          cursor pointer
          color $main-color

        &.main:after
          content 'Main'
          position relative
          top 0
          right 0
          padding 3px 5px
          margin-left 5px
          background green
          color $white
          border-radius 3px

      .member-cat
        display inline-block
        padding 3px
        border-radius 2px
        color $white
        background alpha(green,.3)
        font-size 12px

      .email
        font-size 12px
        &:before
          content '('
        &:after
          content ')'

.project-quotes-tab
  padding 0 20px

  .single-quota
    border-radius 3px
    border 1px solid $grey
    margin-bottom 15px
    background $white
    padding 20px 25px
    overflow hidden
    position relative
    transition box-shadow .3s
    background linear-gradient(to top, alpha($main-color, .02), transparent)

    &:hover
      box-shadow 0 3px 5px 0 alpha($main-color, .3)
      &:after
        transform rotate(35deg) scale(1.1)

    &:after
      content '\f1c1'
      font-family FontAwesome
      font-size 170px
      position absolute
      top 25px
      right 20%
      transition transform .3s
      transform rotate(35deg)
      color alpha($main-color, .2)

    .revision-label
      border-radius 3px
      color $white
      background $main-color
      padding 3px 6px

    .desc-part
      flex-grow 1
      display flex
      flex-wrap wrap

      .quote-info
        margin-bottom 10px
        position relative
        margin-right 10px

      .latest-label
        position relative
        top -5px
        padding 2px 4px
        border-radius 3px
        color $white
        background green
        margin-right 5px
        text-transform uppercase
        font-size 8px

      .quote-name
        &.hide
          display none
        &:hover
          cursor pointer
          &:after
            color alpha($main-color, .5)

        &:after
          content '\f040'
          transition .3s
          font-family FontAwesome
          color alpha($main-color, .0)
          padding-left 10px

      .title
        min-width 100px
        padding-right 20px
        font-size 18px
        color $main-color
        text-transform uppercase

      .quote-name-input
        display none
        width 100px
        border-bottom 1px solid $grey
        font-size 14px

        &.active
          display inline-block

    .control-part
      flex-shrink 0
      position relative
      z-index 10
      display flex

    .quote-revision
      padding 10px 0

      .show-revisions
        display block
        height 40px
        position relative
        z-index 10

        &.up
          &:after
            transform translate(-50%,-50%) rotate(180deg)

        &:hover
          cursor pointer

          &:after
            color $main-color

        &:after
          content '\f103'
          display block
          position absolute
          color alpha($main-color, .2)
          font-family FontAwesome
          width 40px
          height 40px
          text-align center
          font-size 40px
          transition .3s
          top 50%
          left 50%
          transform translate(-50%,-50%)


    .revision-list
      display none

      &:before
        content ''
        position absolute
        display block
        width 5px
        border-radius 3px
        height 100%
        left 0
        top -25px
        background $main-color

    .revision-item
      position relative
      padding 10px 0 10px 10px
      display flex
      flex-wrap wrap
      justify-content space-between
      align-items center
      align-content center
      z-index 10
      border-left 5px solid $main-color
      background linear-gradient(to top, alpha($main-color, .05), transparent)

  .info-label
    padding 30px 20px
    background alpha($grey, .3)
    margin-bottom 10px

.project-inbox-tab,
.details-inbox-tab,
.documents-inbox-tab,
.invoices-inbox-tab
  padding 0 20px

.add-quote-form
  width 100%
  max-width 450px

  .label
    color black
  .revision-field
    padding 10px 0

  .revision-label
    display inline-block
    padding 3px 10px
    background $main-color
    color $white
    border-radius 3px

  .hidden-checkbox
    display none

    &:checked + .check-label:before
      background $main-color

  .check-label
    position relative
    padding-left 35 px
    display block
    line-height 30px
    transition .3s

    &:hover
      cursor pointer
      color $main-color

    &:before
      position absolute
      content ''
      display block
      left 3px
      top 50%
      transform translateY(-50%)
      width 11px
      height 11px
      border-radius 3px
      background alpha($grey, .1)
      transition .3s


    &:after
      position absolute
      content ''
      display block
      left 0
      top 50%
      transform translateY(-50%)
      width 15px
      height 15px
      border-radius 3px
      background alpha($grey, .1)
      border 1px solid $grey


.conversations-tab
  padding 0 20px
  margin-top -30px
  .tab-container
    padding 0

  .tab-controls
    padding 0

  .tab-content
    padding 10px 0

  .left-part,
  .right-part
    width 50%
    padding 0 10px

  .flex-container
    margin-bottom 15px

    .field-wrap
      margin-top 10px
      margin-bottom 10px
      width 100%

      input
        width 100%
        border-bottom 2px solid $main-color
        padding 0 10px

  .conversation-textarea
    width 100%
    border-radius 3px
    padding 15px
.create-project
  .project-members-table
    td
      width 25%
.details-inbox-tab
  display flex
  flex-direction column


