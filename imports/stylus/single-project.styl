@import "var.styl";

.single-project

  .activity
    padding 0 20px

    .text-area-wrap
      position relative

      input[type="file"]
        display none

    .user-info
      position absolute
      left 10px
      top 10px
      overflow hidden
      width 30px
      height 30px

      > img
        display block
        width 100%
        height auto

    textarea
      display block
      width 100%
      padding 20px 50px 30px 50px
      border 1px solid $grey
      border-radius 3px
      font-family inherit

      &:focus
        outline none
        box-shadow inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px rgba(102,175,233,0.6);

    .add-doc-controls
      position absolute
      top 10px
      right 10px
      display block
      width 20px
      height 20px
      text-align center
      line-height 20px
      font-size 18px

      &:hover
        cursor pointer

        &:before
          color $main-color

      &:before
        content '\f0c6'
        font-family FontAwesome
        color $text-color
        transition .3s

    .attached-list
      display flex
      flex-direction column
      align-items flex-start

    .attached-files
      border-radius 3px
      border $grey
      font-size 12px
      color $main-color

      &:hover
        cursor pointer
        text-decoration line-through

      &:before
        content '\f0c6'
        font-family Fontawesome
        padding-right 10px
        color $main-color

  .msg-controls
    padding 20px 0 15px

  .send-msg
    background $main-color
    color $white

    &:hover
      background alpha($main-color, .7)

  .right-sidebar
    overflow hidden

    .title
      position relative
      z-index 5
      background $white

    .header-control
      position relative

      .add-user-btn
        position absolute
        width 30px
        height 30px
        color $main-color
        font-size 25px
        line-height 30px
        text-align center
        display block
        top 50%
        transform translateY(-50%)
        right 0
        z-index 5

        &:after
          content '\f067'
          font-family FontAwesome

        &:hover
          cursor pointer

      .add-user-form
        position absolute
        width 100%
        padding 25px 0 25px
        transition .3s
        bottom 0
        left 0
        background $white
        border-bottom 5px solid $main-color

        &.active
          transform translateY(100%)

      .select-wrap
        padding 0 0 15px

        .members-select
          margin-bottom 15px

        .label
          display block
          margin-bottom 10px
          font-size 16px


    .project-members
      padding 10px 0 0

    .user-list
      padding 10px 0
      transition .3s

      &:hover
        cursor pointer
        color $main-color

      .username
        font-size 16px
        text-transform capitalize

      .email
        font-size 12px
        &:before
          content '('
        &:after
          content ')'








