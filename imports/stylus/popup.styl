.popup-area
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background alpha($white, .5)
  z-index 100
  display flex
  justify-content center
  align-items center

  .popup-container
    padding 25px 20px
    position relative
    background #fff
    max-width 500px
    border 1px solid $main-color
    border-radius 3px

    .pop-head
      text-align center
      margin-bottom 20px

    .body
      min-height 200px

    .pop-footer
      text-align center