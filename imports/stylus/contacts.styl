.contacts-page
  position absolute
  width 100%
  height 100%
  background-color white
  padding 10px
  border-left 1px solid rgba(221, 221, 221, 0.6)
  display flex
  flex-direction column

  table {
    display: flex;
    flex-direction: column;
  }
  tbody {
    overflow-y: auto;
    overflow-x: hidden;
  }
  tr {
    display: flex;
  }
  td {
    text-overflow: ellipsis;
    overflow: hidden;
  }

  .focused
    background: rgba(91, 139, 255, 0.3);

  .header-panel
    order 0
    padding 25px 30px 20px
    text-transform uppercase
    font-size 32px
    position relative
    display inline-block

    &:after
      content ''
      display block
      position absolute
      bottom 0
      left 0
      height 5px
      background linear-gradient(to right, $main-color, alpha($main-color, .1))
      width 100%

  .toolbar-container
    border-bottom 1px solid $border-color-divider
    padding 10px 5px
    display flex
    flex-direction row

  .content-panel
    order 1
    flex 1
    display flex
    flex-direction row
    padding 10px 0

