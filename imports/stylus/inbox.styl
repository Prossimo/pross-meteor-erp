.inbox-page
  position absolute
  width 100%
  height 100%
  background-color white
  padding 10px
  border-left 1px solid rgba(221, 221, 221, 0.6)
  display flex
  flex-direction column
//align-items  center

  .focused
    background: rgba(91, 139, 255, 0.3);

  .header-panel
    order 0
    padding 25px 30px 20px
    text-transform uppercase
    font-size 32px
    position relative
    display inline-block

    &:after
      content ''
      display block
      position absolute
      bottom 0
      left 0
      height 5px
      background linear-gradient(to right, $main-color, alpha($main-color, .1))
      width 100%



  .column-panel
    flex 1 1 0%

    .list-category {
      cursor: default;

      .account-wrapper {
        display: flex;
        border-bottom: 1px solid rgba(91, 139, 255, 0.44);

        .action {
          color: red;
          opacity: 0.0;
          transition: opacity .55s ease-in-out;
          -moz-transition: opacity .55s ease-in-out;
          -webkit-transition: opacity .55s ease-in-out;
        }
        &:hover {
          .action {
            opacity: 1.0;
            transition: opacity .3s ease-in-out;
            -moz-transition: opacity .3s ease-in-out;
            -webkit-transition: opacity .3s ease-in-out;
          }
        }
      }
      .item {
        color: rgba(35, 31, 32, 0.8);
        flex: 1;
        display: flex;
        align-items: baseline;
        font-size: 14px;
        font-weight: 400;
        padding: 0 10px;
        line-height: 27.3px;
        clear: both;

        &:hover {
          background: rgba(91, 139, 255, 0.1);
        }
      }
    }

    .list-thread {
      cursor: default;

      .thread-icon {
        width: 25px;
        height: 24px;
        flex-shrink: 0;
        background-size: 15px;
        display: inline-block;
        background-repeat: no-repeat;
        background-position: center;

        &.thread-icon-attachment {
          background-image: url(icons/inbox/icon-attachment.png);
          margin-right: 0;
          margin-left: 0;
        }
        &.thread-icon-unread {
          background-image: url(icons/inbox/icon-unread.png);
        }
        &.thread-icon-replied {
          background-image: url(icons/inbox/icon-replied.png);
        }
        &.thread-icon-forwarded {
          background-image: url(icons/inbox/icon-forwarded.png);
        }
        &.thread-icon-star {
          background-size: 16px;
          background-image: url(icons/inbox/icon-star.png);
        }
        &.thread-icon-pencil {
          background-size: 16px;
          background-image: url(icons/inbox/icon-pencil.png);
        }
      }

      .item {
        color: rgba(35, 31, 32, 0.8);
        flex: 1;
        display: flex;
        align-items: center;
        font-size: $font-size;
        font-weight: 400;
        padding: 12px;
        line-height: 21px;
        clear: both;
        white-space: nowrap;
        border-bottom: 1px solid $border-color-primary;
        height: 85px;

        &:hover {
          background: rgba(91, 139, 255, 0.1);
        }

        .thread-info-column {
          flex: 1;
          overflow: hidden;

          .unread-true {
            font-weight: bold;
          }
          .participants-wrapper {
            display: flex;
            align-items: center;
            min-height: 24px;

            .participants {
              overflow: hidden;
              text-overflow: ellipsis;

              .unread {
                font-weight: $font-weight-semi-bold;
              }
            }

            .timestamp {
              font-size: $font-size-small;
              font-weight: $font-weight-normal;
              margin-right: 8px;
              opacity: 0.62;
            }
          }

          .subject {
            font-size: $font-size-small;
            font-weight: $font-weight-normal;
            overflow: hidden;
            text-overflow: ellipsis;
            text-align: left;
            margin-right: 8px;
            padding-right: $padding-base-horizontal;

            .unread {
              font-weight: $font-weight-semi-bold;
            }
          }

          .snippet {
            font-size: $font-size-small;
            font-weight: $font-weight-normal;
            overflow: hidden;
            text-overflow ellipsis;
            opacity: 0.7;
            text-align: left;
            min-height: 21px;
            margin-right: 4px;
            flex: 1;
          }
        }
      }
    }



  .message-participants {
    z-index: 1;
    position: relative;
    display: flex;
    transition: padding-left 150ms;
    transition-timing-function: ease-in-out;

    &.collapsed:hover {
      cursor: default;
    }

    .from-contact {
      font-weight: $headings-font-weight;
      color: $text-color;
    }
    .from-label, .to-label, .cc-label, .bcc-label {
      color: $text-color-very-subtle;
    }
    .to-contact, .cc-contact, .bcc-contact, .to-everyone {
      color: $text-color-very-subtle;
    }

    &.to-participants {
      width: 100%;

      .collapsed-participants {
        width: 100%;
        margin-top: -6px;
      }
    }

    .collapsed-participants {
      display: flex;
      align-items: center;

      .to-contact {
        display: inline-block;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
      }
    }

    .expanded-participants {
      position: relative;
      padding-right: 1.2em;
      width: 100%;

      .participant {
        display: inline-block;
        margin-right: 0.25em;
      }

      .participant-type {
        margin-top: 0.5em;
        &:first-child {
          margin-top: 0;
        }
      }

      .from-label, .to-label, .cc-label, .bcc-label {
        float: left;
        display: block;
        text-transform: capitalize;
        font-weight: $font-weight-normal;
        margin-left: 0;
      }

      .from-contact, .subject {
        font-weight: $font-weight-semi-bold;
      }

    // .from-label { margin-right: 1em; }
      .to-label, .cc-label {
        margin-right: 0.5em;
      }
      .bcc-label {
        margin-right: 0;
      }

      .participant-primary {
        color: $text-color-very-subtle;
        margin-right: 0.15em;
        display: inline-block;
      }
      .participant-secondary {
        color: $text-color-very-subtle;
        display: inline-block;
      }

      .from-contact {
        .participant-primary {
          color: $text-color;
        }
        .participant-secondary {
          color: $text-color;
        }
      }
    }
  }

.download-all {
  $download-btn-color = tint(#929292, 20%);
  $download-hover-color = tint($component-active-color, 20%);

  display: flex;
  align-items: center;
  color: $download-btn-color;
  font-size: 0.9em;
  cursor: default;
  margin-top: $spacing-three-quarters;

  .separator {
    margin: 0 5px;
  }

  .attachment-number {
    display: flex;
    align-items: center;
  }

  img {
    vertical-align: middle;
    margin-right: $spacing-half;
  //background-color: $download-btn-color;
  }

  .download-all-action {
    cursor: pointer;
    &:hover {

      color: $download-hover-color;
      img {
      //background-color: $download-hover-color;
      }
    }
  }
}

