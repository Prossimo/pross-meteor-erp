.inbox-page
  position absolute
  width 100%
  height 100%
  background-color white
  padding 10px
  border-left: 1px solid rgba(221,221,221,0.6)
  display flex
  flex-direction column

  .focused
    background: rgba(91,139,255,0.3);

  .header-panel
    order 0
    padding 25px 30px 20px
    text-transform uppercase
    font-size 32px
    position relative
    display inline-block

    &:after
      content ''
      display block
      position absolute
      bottom 0
      left 0
      height 5px
      background linear-gradient(to right, $main-color, alpha($main-color, .1))
      width 100%

  .content-panel
    order 1
    flex 1
    display flex
    flex-direction row
    padding 10px 0

  .column-panel
    flex 1 1 0%

    .list-folder {
      cursor: default;
      .item {
        color: rgba(35, 31, 32, 0.8);
        flex: 1;
        display: flex;
        align-items: baseline;
        font-size: 14px;
        font-weight: 400;
        padding: 0 10px;
        line-height: 27.3px;
        clear: both;

        &:hover {
          background: rgba(91,139,255,0.1);
        }
      }
    }

    .list-thread {
      cursor: default;
      .item {
        color: rgba(35, 31, 32, 0.8);
        flex: 1;
        display: flex;
        align-items: center;
        font-size: $font-size;
        font-weight: 400;
        padding: 12px;
        line-height: 21px;
        clear: both;
        white-space: nowrap;
        border-bottom: 1px solid rgba(221,221,221,1);
        height: 85px;

        &:hover {
          background: rgba(91,139,255,0.1);
        }

        .thread-info-column {
          flex:1;
          overflow: hidden;

          .unread-true {
            font-weight: bold;
          }
          .participants-wrapper {
            display: flex;
            align-items: center;
            min-height: 24px;

            .participants {
              .unread {
                font-weight: $font-weight-semi-bold;
              }
            }

            .timestamp {
              font-size: $font-size-small;
              font-weight: $font-weight-normal;
              margin-right: 8px;
              opacity: 0.62;
            }
          }

          .subject {
            font-size: $font-size-small;
            font-weight: $font-weight-normal;
            overflow: hidden;
            text-overflow: ellipsis;
            text-align: left;
            margin-right: 8px;
            padding-right: $padding-base-horizontal;

            .unread {
              font-weight: $font-weight-semi-bold;
            }
          }

          .snippet {
            font-size: $font-size-small;
            font-weight: $font-weight-normal;
            overflow: hidden;
            text-overflow ellipsis;
            opacity: 0.7;
            text-align: left;
            min-height: 21px;
            margin-right: 4px;
            flex: 1;
          }
        }
      }
    }

    .list-message {
      $message-max-width = 800px;
      $message-spacing = 6px;
      display: flex;
      flex-direction: column;
      position: relative;
      background: $background-secondary;

      transition: all 125ms ease-in-out;
      width: 100%;
      height: 100%;
      min-height: 100%;
      padding: 0;

      .message-item-wrap {
        transition: height 0.1s;
        position: relative;
        max-width: $message-max-width;
        margin: 0 auto;
        padding-bottom: $message-spacing * 2;

        .message-item-white-wrap {
          background: $background-primary;
          border: 0;
          box-shadow: 0 0 0.5px rgba(0, 0, 0, 0.28), 0 1px 1.5px rgba(0, 0, 0, 0.08);
          border-radius: 4px;
        }
      }


    }
