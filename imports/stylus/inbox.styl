.inbox-page
  position absolute
  width 100%
  height 100%
  background-color white
  padding 10px
  border-left: 1px solid rgba(221,221,221,0.6)

  .page-title
    padding 25px 30px 20px
    text-transform uppercase
    font-size 32px
    position relative
    display inline-block

    &:after
      content ''
      display block
      position absolute
      bottom 0
      left 0
      height 5px
      background linear-gradient(to right, $main-color, alpha($main-color, .1))
      width 100%

  .content-panel
    display flex
    flex-direction row
    height 100%

  .column-panel
    margin 5px
    flex 1 1 0%

    .list-folder {
      .item {
        color: rgba(35, 31, 32, 0.8);
        flex: 1;
        display: flex;
        align-items: baseline;
        font-size: 14px;
        font-weight: 400;
        padding-right: 14px;
        line-height: 27.3px;
        clear: both;
      }
    }

    .list-thread {
      cursor: default;
      .item {
        color: rgba(35, 31, 32, 0.8);
        flex: 1;
        display: flex;
        align-items: center;
        font-size: $font-size;
        font-weight: 400;
        padding: 12px;
        line-height: 21px;
        clear: both;
        white-space: nowrap;
        border-bottom: 1px solid rgba(221,221,221,1);
        height: 85px;

        &:hover {
          background: rgba(221,221,221,0.7);
        }

        .thread-info-column {
          flex:1;
          overflow: hidden;

          .unread-true {
            font-weight: bold;
          }
          .participants-wrapper {
            display: flex;
            align-items: center;
            min-height: 24px;

            .participants {
              .unread {
                font-weight: $font-weight-semi-bold;
              }
            }

            .timestamp {
              font-size: $font-size-small;
              font-weight: $font-weight-normal;
              margin-right: 8px;
              opacity: 0.62;
            }
          }

          .subject {
            font-size: $font-size-small;
            font-weight: $font-weight-normal;
            overflow: hidden;
            text-overflow: ellipsis;
            text-align: left;
            margin-right: 8px;
            padding-right: $padding-base-horizontal;

            .unread {
              font-weight: $font-weight-semi-bold;
            }
          }

          .snippet {
            font-size: $font-size-small;
            font-weight: $font-weight-normal;
            overflow: hidden;
            text-overflow ellipsis;
            opacity: 0.7;
            text-align: left;
            min-height: 21px;
            margin-right: 4px;
            flex: 1;
          }
        }
      }
    }

