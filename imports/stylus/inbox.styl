.inbox-page
  position absolute
  width 100%
  height 100%
  background-color white
  padding 10px
  border-left: 1px solid rgba(221,221,221,0.6)

  .page-title
    padding 25px 30px 20px
    text-transform uppercase
    font-size 32px
    position relative
    display inline-block

    &:after
      content ''
      display block
      position absolute
      bottom 0
      left 0
      height 5px
      background linear-gradient(to right, $main-color, alpha($main-color, .1))
      width 100%

  .content-panel
    display flex
    flex-direction row
    height 100%

  .column-panel
    margin 5px
    flex 1 1 0%