@import "var.styl";

.auth-container
  position fixed
  top 50%
  left 50%
  transform translate(-50%,-50%)
  width 100%

.sign-in-wrap,
.sign-up-wrap
  max-width 450px
  background $white
  padding 30px 50px
  margin 0 auto
  border-radius 4px
  font-size 16px

  .title
    text-align center
    padding 10px 0 20px

  .auth-footer
    padding 20px 0 10px
    text-align right

  .toggle-auth
    color $main-color

    &:hover
      cursor pointer

  .auth-form
    width 100%

    .warn-msg
      color red
      padding 0 15px

.flex-input
  height 40px
  padding 10px 10px 0
  position relative
  border-bottom 2px solid $main-color
  margin-bottom 20px

  &.active
    label
      font-size 10px
      top 0

  input
    display block
    width 100%
    height 100%

  label
    position absolute
    top 10px
    left 10px
    transition .3s
    cursor text

  .validation
    position absolute
    bottom -20px
    font-size 12px
    left 10px
    color red

.flex-input-select
  height 40px
  padding 10px 10px 0
  position relative
  border-bottom 2px solid $main-color
  margin-bottom 20px

  &.active
    label
      font-size 10px
      top 0

  input
    width 75%
    height 100%

  select
    width 25%
    height 100%

  label
    position absolute
    top 10px
    left 10px
    transition .3s

  .validation
    position absolute
    bottom -20px
    font-size 12px
    left 10px
    color red

.btnn

  &:hover
    cursor pointer

  &.login-btn
    border 1px solid $main-color
    transition .3s
    height 40px
    line-height 38px
    color $main-color

    &:hover
      background $main-color
      color $white


