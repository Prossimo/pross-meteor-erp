.templates-panel {
  display: flex;

  .templates-list {
    width: 450px
  }

  .template-overview {
    flex: 1

    .template-view {
      padding: 10px;
      margin: 20px;
      background: $background-primary;
      border: 0;
      box-shadow: 0 0 0.5px rgba(0, 0, 0, 0.28), 0 1px 1.5px rgba(0, 0, 0, 0.08);
      border-radius: 4px;

      .subject {
        font-size: 17px;
        padding: 10px;
        border-bottom: solid 1px rgba(0, 0, 0, 0.28);
      }

      .body {
        .iframe-container {
          margin-top: 10px;
          width: 100%;

          iframe {
            width: 100%;
            border: 0;
            padding: 0;
            overflow: auto;
          }
        }
      }
    }
  }
}